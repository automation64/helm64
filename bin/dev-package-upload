#!/usr/bin/env bash
#
# Upload helm package to repository and create release
#

# shellcheck source=SCRIPTDIR/devhl-set
source ./bin/dev-set || exit 1
# shellcheck source=SCRIPTDIR/../lib/bashlib64.bash
source "$DEV_CICD_BASHLIB64" || exit 1

bl64_msg_all_enable_verbose
bl64_msg_show_task "upload new releases to github (${DEV_CR_REPO})"
"$DEV_CICD_BIN_CR" upload \
  --git-repo "$DEV_CR_REPO" \
  --owner "$DEV_CR_OWNER" \
  --package-path "$DEV_BUILD" \
  --skip-existing
